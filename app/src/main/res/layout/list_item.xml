<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <ImageView
        android:id="@+id/iv_event_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/miserables"
        android:layout_marginStart="3dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_event_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:gravity="right"
        android:textDirection="anyRtl"
        app:layout_constraintStart_toEndOf="@+id/event_item_image"
        app:layout_constraintTop_toTopOf="@+id/event_item_image"
        tools:text="החברים של נטאשה: 25 שנה ל'שינויים בהרגלי הצריחה'" />

    <TextView
        android:id="@+id/tv_event_item_datetime"
        android:layout_width="171dp"
        android:layout_height="12dp"
        tools:text="25/7/17 בשעה 21:30"
        android:textSize="8sp"
        android:gravity="right"
        android:textDirection="anyRtl"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/event_item_title"
        app:layout_constraintTop_toBottomOf="@+id/event_item_title"
        tools:layout_editor_absoluteX="135dp" />

    <TextView
        android:id="@+id/tv_event_item_hall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="מועדון הבארבי, תל אביב"
        android:textSize="8sp"
        android:textDirection="anyRtl"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="@+id/event_item_datetime"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/event_item_datetime" />

    <ImageView
        android:id="@+id/iv_event_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_lock_power_off"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp" />

</android.support.constraint.ConstraintLayout>