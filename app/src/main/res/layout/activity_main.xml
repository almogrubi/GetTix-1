<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="app.com.almogrubi.idansasson.gettix.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:alignmentMode="alignBounds"
        android:layout_margin="3dp"
        android:columnCount="2"
        android:rowCount="2">

        <TextView
            android:id="@+id/tv_find_label"
            android:text="@string/find_events_label"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:gravity="right"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_row="1"
            android:layout_column="0"
            android:weightSum="1">

            <EditText
                android:id="@+id/et_find_by_date"
                android:hint="@string/event_date_label"
                android:clickable="true"
                android:focusable="false"
                style="@style/AppEditTextStyle" />

            <EditText
                android:id="@+id/et_find_by_hall"
                android:hint="@string/event_hall_label"
                style="@style/AppEditTextStyle" />

            <EditText
                android:id="@+id/et_find_by_city"
                android:hint="@string/event_city_label"
                android:layout_marginBottom="16dp"
                style="@style/AppEditTextStyle" />

        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:layout_gravity="center"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_row="1"
            android:layout_column="1">

            <Spinner
                android:id="@+id/sp_find_by_category"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_find_by_keyword"
                android:hint="@string/event_keyword_label"
                android:layout_marginBottom="8dp"
                style="@style/AppEditTextStyle" />

            <Button
                android:id="@+id/bt_search_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/search_events_button" />

        </LinearLayout>

    </GridLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorPrimary" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/searched_events_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
