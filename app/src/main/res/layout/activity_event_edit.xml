<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:alignmentMode="alignBounds"
            android:layout_margin="3dp"
            android:layoutDirection="rtl"
            android:columnCount="2"
            android:rowCount="15">

            <TextView
                android:id="@+id/tv_event_edit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_create_title"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="2"
                style="@style/TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/tv_event_title"
                android:text="@string/event_title_label"
                android:layout_row="1"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_event_title"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="right"
                style="@style/AppEditTextStyle" />

            <TextView
                android:id="@+id/tv_event_category"
                android:text="@string/event_category_label"
                android:layout_row="2"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/sp_event_category"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="right"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_event_hall"
                android:text="@string/event_hall_label"
                android:layout_row="3"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/sp_event_hall"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="right"
                style="@style/Widget.AppCompat.Spinner.DropDown"
                android:layout_width="120dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_event_date"
                android:text="@string/event_date_label"
                android:layout_row="4"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_event_date"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="right"
                android:clickable="true"
                android:focusable="false"
                style="@style/AppEditTextStyle" />

            <TextView
                android:id="@+id/tv_event_hour"
                android:text="@string/event_hour_label"
                android:layout_row="5"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_event_hour"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_gravity="right"
                android:clickable="true"
                android:focusable="false"
                style="@style/AppEditTextStyle" />

            <TextView
                android:id="@+id/tv_event_duration"
                android:text="@string/event_duration_label"
                android:layout_row="6"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_event_duration"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_gravity="right"
                android:inputType="number"
                android:digits="0123456789"
                style="@style/AppEditTextStyle" />

            <TextView
                android:id="@+id/tv_event_description"
                android:text="@string/event_description_label"
                android:layout_row="7"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_event_description"
                android:layout_row="7"
                android:layout_column="1"
                android:layout_gravity="right"
                android:maxLines="10"
                style="@style/AppEditTextStyle" />

            <TextView
                android:id="@+id/tv_event_performer"
                android:text="@string/event_performer_label"
                android:layout_row="8"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_event_performer"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_gravity="right"
                android:maxLines="10"
                style="@style/AppEditTextStyle" />

            <TextView
                android:id="@+id/tv_event_price"
                android:text="@string/event_price_label"
                android:layout_row="9"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_event_price"
                android:layout_row="9"
                android:layout_column="1"
                android:layout_gravity="right"
                android:inputType="number"
                android:digits="0123456789"
                style="@style/AppEditTextStyle" />

            <Button
                android:id="@+id/bt_load_poster"
                android:text="@string/event_poster_label"
                android:layout_row="10"
                android:layout_column="0"
                style="@style/AppButtonStyle"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_event_poster"
                android:layout_row="10"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <CheckBox
                android:id="@+id/cb_event_marked_seats"
                android:text="@string/event_marked_seats_label"
                android:layout_row="11"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:onClick="onMarkedSeatsClicked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_event_max_capacity"
                android:text="@string/event_max_capacity_label"
                android:layout_row="12"
                android:layout_column="0"
                style="@style/EditScreenTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_event_max_capacity"
                android:layout_row="12"
                android:layout_column="1"
                android:layout_gravity="right"
                android:inputType="number"
                android:digits="0123456789"
                style="@style/AppEditTextStyle" />

            <CheckBox
                android:id="@+id/cb_event_sold_out"
                android:text="@string/event_sold_out_label"
                android:enabled="false"
                android:layout_row="13"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_save_event"
                android:layout_row="14"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/save_event_button" />

        </GridLayout>
    </ScrollView>
</layout>