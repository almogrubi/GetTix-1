<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:minHeight="?android:attr/listPreferredItemHeight">

    <TextView
        android:id="@+id/tv_event_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/Black"
        android:gravity="center"
        android:textDirection="anyRtl"
        android:textSize="18sp"
        tools:text="החברים של נטאשה: מופע חדש" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_event_item_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="0dp"
            tools:text="25/7/17"
            android:textDirection="anyRtl"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_event_item_hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/half_tab_margin"
            android:padding="0dp"
            tools:text="מועדון הבארבי, תל אביב"
            android:textSize="12sp"
            android:textDirection="anyRtl" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_event_item_sold_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/half_tab_margin"
        android:textDirection="anyRtl"
        android:textSize="@dimen/common_text_size"
        android:textStyle="normal"
        tools:text="24 כרטיסים נמכרו מתוך 150" />

    <TextView
        android:id="@+id/tv_event_item_occupancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="0dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textDirection="anyRtl"
        android:textSize="@dimen/common_text_size"
        android:textStyle="normal"
        tools:text="תפוסה: 16%" />

    <ImageView
        android:id="@+id/iv_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_item_hall" />

</LinearLayout>