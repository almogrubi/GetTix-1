<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.almogrubi.idansasson.gettix">

    <application
        android:name=".GetTixApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ManagementActivity"
            android:label="@string/events_screen_title"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EventsActivity"
            android:label="@string/events_button"
            android:launchMode="singleTop"
            android:parentActivityName=".ManagementActivity" />
        <activity
            android:name=".EventEditActivity"
            android:label="@string/event_edit_title"
            android:parentActivityName=".EventsActivity" />
        <activity
            android:name=".HallsActivity"
            android:label="@string/halls_button"
            android:launchMode="singleTop"
            android:parentActivityName=".ManagementActivity" />
        <activity
            android:name=".HallEditActivity"
            android:label="@string/hall_edit_title"
            android:parentActivityName=".HallsActivity" />
        <activity
            android:name=".EventDetailsActivity"
            android:label="@string/title_activity_detail"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".NoSeatsActivity"
            android:label="@string/title_activity_no_seats"
            android:launchMode="singleTop"
            android:parentActivityName=".EventDetailsActivity" />
        <activity
            android:name=".SeatsActivity"
            android:label="@string/title_activity_seats"
            android:launchMode="singleTop"
            android:parentActivityName=".EventDetailsActivity" />
        <activity
            android:name=".PaymentActivity"
            android:label="@string/title_activity_payment" />
        <activity android:name=".ConfirmationActivity" />

        <meta-data
            android:name="CLOUDINARY_URL"
            android:value="cloudinary://idansass" />

        <service
            android:name=".CancelOrderJobService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>
    </application>

</manifest>