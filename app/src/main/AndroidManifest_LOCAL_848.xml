<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.com.almogrubi.idansasson.gettix">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SitsActivity"
            android:label="@string/title_activity_sits"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PayActivity"
            android:label="@string/title_activity_pay"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".NoSitsActivity" />
        <activity android:name=".FinishingActivity" />
        <activity android:name=".ManagementActivity" />
        <activity android:name=".EventsActivity" />
        <activity android:name=".HallsActivity" />
        <activity android:name=".ReportsActivity" />
        <activity android:name=".EventEditActivity"></activity>
    </application>

</manifest>